@model WebMagazine.Models.Purchase

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h3>Оформление покупки</h3>
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <input type="hidden" name="PhoneId" value="@ViewBag.Id" />

    <table>
        <tr>
            Ф.И.О.
            @Html.EditorFor(model => model.FIO, new { htmlAttributes = new { @class = "form-control" } })
        </tr>
        @Html.ValidationMessageFor(model => model.FIO, "", new { @class = "text-danger" })
        <tr>
            Email
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
        </tr>
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        <tr>
            Адрес
            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
        </tr>
        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
        <tr>
            <td colspan="2"><input type="submit" value="Оформить покупку" /></td>
        </tr>
    </table>
}


@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
